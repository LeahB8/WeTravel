<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<br>

<p>Author: <%= link_to @post.user.username, @post.user %></p>
<p>Destination: <%= link_to @post.destination.location, @post.destination %></p>
<p>Tags: </p>
<% @post.tags.each do |tag| %>
  <%= tag.name %>
  <% end %>
<p>Likes: <%= @post.likes %><br>


<%= link_to "Like", increase_likes_path(@post) %><br>

<% if (logged_in? && (current_user.id == @post.user_id)) %>
  <%= link_to "Edit Post", edit_post_path(@post) %>
  <%= form_tag post_path(@post.id), method: "delete" do %>
    <%= submit_tag "Delete Post" %>
  <% end %>
<% end %>
