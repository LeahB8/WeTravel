<div class="container">
  <br><br><h1><%= @post.title %></h1><br><br>
  <p class="lead"><%= @post.content %></p><br><br><br>



<p class="lead">Author: <%= link_to @post.user.username, @post.user %></p>
<p class="lead">Destination: <%= link_to @post.destination.location, @post.destination %></p>
<p class="lead">Likes: <%= @post.likes %><br>


<%= link_to "Like", increase_likes_path(@post) %><br>
<%= render partial: 'comments/form' %>

<% if @comments.length > 0 %>
  <h4>Comments</h4>
  <% @comments.each do |comment| %>
    <div>
      <p><%= @commenter %>: <%= comment.content %></p><br>
    </div>
  <% end %>
<% end %>


<% if (logged_in? && (current_user.id == @post.user_id)) %>
<a href=<%=edit_post_path%> class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Edit Post</a><br><br>
<%= form_tag post_path(@post.id), method: "delete" do %>
  <%= submit_tag "Delete Post" %>
<% end %>
<% end %>
</div>
