<%= form_for @post do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.label :title %><br>
<%= f.text_field :title %><br><br>
<%= f.label :content %><br>
<%= f.text_area :content %><br><br>
<%= f.label :country %><br>
<%= f.collection_select :destination_id, Destination.all, :id, :location %><br><br>

<br><br><%= f.submit %>
<% end %>
